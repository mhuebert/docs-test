{% assign pages = site.pages | where_exp:"page", "page.layout" %}
[
  {% for page in pages %}
{ "title"    : "{{ page.title | escape }}",
  "url"     : "{{ page.url }}",
  "name"     : "{{ page.name }}",
  "path"     : "{{ page.path }}",
"date"     : "{{ page.date | date: "%B %d, %Y" }}"
}
{% if forloop.last %}{% else %},{% endif %}
{% endfor %}
]
